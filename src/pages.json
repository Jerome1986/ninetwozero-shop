{
	// 组件自动导入
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置  // [!code ++]
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
			// [!code ++]
		}
	},
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/home/home",
			"style": {
				"navigationBarTitleText": "首页",
				"navigationStyle": "custom",
				"navigationBarTextStyle": "white"
			}
		},
		{
			"path": "pages/shop/shop",
			"style": {
				"navigationBarTitleText": "商品"
			}
		},
		{
			"path": "pages/warehouse/warehouse",
			"style": {
				"navigationBarTitleText": "仓库",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/phoneFilm/phoneFilm",
			"style": {
				"navigationBarTitleText": "产品列表"
			}
		},
		{
			"path": "pages/productDetail/productDetail",
			"style": {
				"navigationBarTitleText": "产品详情",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/hireForm/hireForm",
			"style": {
				"navigationBarTitleText": "信息填写"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "",
		"navigationBarBackgroundColor": "#d62731",
		"backgroundColor": "#F8F8F8"
	},
	// 设置 TabBar
	"tabBar": {
		"color": "#333333",
		"selectedColor": "#D62731",
		"backgroundColor": "#fff",
		"borderStyle": "white",
		"list": [
			{
				"text": "首页",
				"pagePath": "pages/home/home",
				"iconPath": "static/tabs/home.png",
				"selectedIconPath": "static/tabs/home_selected.png"
			},
			{
				"text": "商品",
				"pagePath": "pages/shop/shop",
				"iconPath": "static/tabs/shop.png",
				"selectedIconPath": "static/tabs/shop_selected.png"
			},
			{
				"text": "仓库",
				"pagePath": "pages/warehouse/warehouse",
				"iconPath": "static/tabs/warehouse.png",
				"selectedIconPath": "static/tabs/warehouse_selected.png"
			},
			{
				"text": "我的",
				"pagePath": "pages/my/my",
				"iconPath": "static/tabs/my.png",
				"selectedIconPath": "static/tabs/my_selected.png"
			}
		]
	},
	"subPackages": [
		{
			// 子包的根目录
			"root": "pagesMember",
			// 页面路径和窗口表现
			"pages": [
				{
					"path": "setting/setting",
					"style": {
						"navigationBarTitleText": "设置",
						"enablePullDownRefresh": false
					}
				},
				{
					"path": "profile/profile",
					"style": {
						"navigationBarTitleText": "个人资料",
						"enablePullDownRefresh": false
					}
				}
			]
		}
	],
	// 分包预下载规则
	"preloadRule": {
		"pages/my/my": {
			"network": "all",
			// [!code ++]
			"packages": [
				"pagesMember"
			]
		}
	}
}